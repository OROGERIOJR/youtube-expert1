{
  "openapi": "3.1.0",
  "info": {
    "title": "Salvar Mensagens GPT",
    "description": "Armazena automaticamente todas as mensagens enviadas pelo usuário em um Google Docs.",
    "version": "1.0.2"
  },
  "servers": [
    {
      "url": "https://script.google.com/macros/s/AKfycby4xpKKjl1H4I7UsYHukM4RO8phM8_jvqQD66DQBtxIjTHAMNy1dPthhCpuiCzukYvxPA/exec"
    }
  ],
  "paths": {
    "/": {
      "post": {
        "summary": "Salva a mensagem do usuário no Google Docs",
        "operationId": "saveUserMessage",
        "requestBody": {
          "description": "JSON contendo a mensagem do usuário a ser salva.",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "userMessage": {
                    "type": "string",
                    "description": "Mensagem enviada pelo usuário para ser salva no Google Docs."
                  }
                },
                "required": ["userMessage"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Mensagem salva com sucesso no Google Docs",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    },
                    "message": {
                      "type": "string"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "timestamp": {
                          "type": "string",
                          "description": "Data e hora do salvamento."
                        },
                        "docId": {
                          "type": "string",
                          "description": "ID do Google Docs."
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "default": {
            "description": "Resposta de erro",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    },
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "x-openai": {
    "functions": [
      {
        "name": "saveUserMessage",
        "description": "Envia a mensagem do usuário para o Google Docs.",
        "parameters": {
          "type": "object",
          "properties": {
            "userMessage": {
              "type": "string",
              "description": "Mensagem enviada pelo usuário para ser salva no Google Docs."
            }
          },
          "required": ["userMessage"]
        },
        "request": {
          "method": "post",
          "url": "https://script.google.com/macros/s/AKfycby4xpKKjl1H4I7UsYHukM4RO8phM8_jvqQD66DQBtxIjTHAMNy1dPthhCpuiCzukYvxPA/exec",
          "mediaType": "application/json",
          "body": {
            "userMessage": "{userMessage}"
          }
        },
        "response": {
          "type": "json",
          "success_condition": "$.status == 'success'",
          "error_message": "Erro ao salvar a mensagem no Google Docs."
        }
      }
    ]
  }
}
