        "responses": {
          "200": {
            "description": "Mensagem salva com sucesso no Google Docs",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string" },
                    "message": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "x-openai": {
    "functions": [
      {
        "name": "salvarMensagem",
        "description": "Envia a mensagem do usuário para o Google Docs.",
        "parameters": {
          "type": "object",
          "properties": {
            "userMessage": {
              "type": "string",
              "description": "Mensagem enviada pelo usuário para ser salva no Google Docs."
            }
          },
          "required": ["userMessage"]
        },
        "request": {
          "method": "post",
          "url": "https://script.google.com/macros/s/AKfycbzVZ-cqivQQhzt2G1O6_nbxK1swjVTIQOblM6oHAx3o81w01JtXyk_OeIyAfsMGZFPA0w/exec",
