{
  "openapi": "3.1.0",
  "info": {
    "title": "Salvar Mensagens GPT",
    "description": "Armazena automaticamente todas as mensagens enviadas pelo usuário em um Google Docs.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://script.google.com/macros/s/AKfycbzVZ-cqivQQhzt2G1O6_nbxK1swjVTIQOblM6oHAx3o81w01JtXyk_OeIyAfsMGZFPA0w/exec"
    }
  ],
  "paths": {
    "/": {
      "post": {
        "summary": "Salva mensagem do usuário no Google Docs.",
        "operationId": "salvarMensagem",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "userMessage": {
                    "type": "string",
                    "description": "Mensagem enviada pelo usuário para ser salva no Google Docs."
                  }
                },
                "required": ["userMessage"]
              }
            }
          }
